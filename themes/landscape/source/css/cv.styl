html,
body {
    height: 99%;
    color: #000;
    line-height: 1.5;
    font-family: Verdana, sans-serif;
    font-size: 16px;
}

a {
    color: #61676f;
    text-decoration: none;
}

a:hover {
    color: #51575f;
    border-bottom: 1px dashed #51575f;
}

.shadow {
    -moz-box-shadow: 2px 2px 2px #ccc;
    -webkit-box-shadow: 2px 2px 2px #ccc;
    box-shadow: 2px 2px 2px #ccc;
}

ol {
    list-style-type: armenian;
    font-size: 16px;
}

#article {
    font-family: serif;
    font-size: 16pt;
    text-align: center;
    max-width: 50%;
    margin-left: auto;
    margin-right: auto;
}

#article span {
    text-align: left; 
    font-family: Verdana, sans-serif;
}
